# MoltBot Environment Configuration
# Copy this file to .env and fill in your values

# ────────────────────────────────────────
# EXCHANGE API KEYS (Optional - for auto-trade only)
# ────────────────────────────────────────
BINANCE_API_KEY=
BINANCE_API_SECRET=

# ────────────────────────────────────────
# DATA SOURCE API KEYS
# ────────────────────────────────────────
# CryptoPanic (free tier available)
CRYPTOPANIC_API_KEY=free

# ────────────────────────────────────────
# RISK MANAGEMENT
# ────────────────────────────────────────
MAX_TRADE_RISK_PERCENT=2.0
DEFAULT_STOP_LOSS_PERCENT=3.0
DEFAULT_TAKE_PROFIT_PERCENT=5.0

# ────────────────────────────────────────
# CONFIDENCE SETTINGS
# ────────────────────────────────────────
MIN_CONFIDENCE_THRESHOLD=60
HIGH_CONFIDENCE_THRESHOLD=75

# ────────────────────────────────────────
# PREDICTION WEIGHTS
# ────────────────────────────────────────
STRATEGY_WEIGHT=0.40
ML_WEIGHT=0.35
NEWS_WEIGHT=0.25

# ────────────────────────────────────────
# DATABASE
# ────────────────────────────────────────
DATABASE_URL=sqlite:///./data_storage/moltbot.db

# ────────────────────────────────────────
# APPLICATION
# ────────────────────────────────────────
DEBUG=true
APP_NAME=MoltBot Trading Platform
